<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messagesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/messageControlsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:overScrollMode="never" />

    <RelativeLayout
        android:id="@+id/messageControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:padding="@dimen/space10">

        <ImageButton
            android:id="@+id/addAttachmentButton"
            style="@style/PrimaryButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/space10"
            android:padding="@dimen/space16"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white" />

        <EditText
            android:id="@+id/messageInputArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/addAttachmentButton"
            android:background="@drawable/rounded_background"
            android:hint="@string/enterMessage"
            android:inputType="textCapSentences"
            android:padding="@dimen/space16"
            android:paddingEnd="48dp" />

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="@dimen/space32"
            android:layout_height="@dimen/space32"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_send"
            android:backgroundTint="@color/colorPrimary" />

    </RelativeLayout>

</RelativeLayout>