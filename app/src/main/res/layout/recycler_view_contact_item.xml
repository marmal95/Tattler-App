<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contactsRecyclerItemSize"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <agency.tango.android.avatarview.views.AvatarView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/contactItemAvatarSize"
        android:layout_height="@dimen/contactItemAvatarSize"
        android:layout_marginEnd="@dimen/space16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space5"
            android:textSize="@dimen/primaryRecyclerItemFontSize"/>

        <TextView
            android:id="@+id/userNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondaryRecyclerItemFontSize"/>

    </LinearLayout>


</LinearLayout>